<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bg_view"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_view"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="-80dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/mcardAddhouse"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#E3F3F3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="80dp"
                        android:src="@drawable/home"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Houses"
                        android:layout_marginLeft="15dp"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#209E92"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mcardViewhouse"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#E3F3F3"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_baseline_preview_24"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="7dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Houses"
                        android:layout_gravity="center_horizontal"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#209E92"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/mcardMessage"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#E3F3F3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="80dp"
                        android:src="@drawable/message"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Talk to us"
                        android:layout_marginLeft="15dp"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#209E92"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#E3F3F3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="80dp"
                        android:src="@drawable/delete"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete House"
                        android:layout_marginLeft="15dp"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#209E92"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#E3F3F3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="67dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit House"
                        android:layout_marginLeft="15dp"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#E3F3F3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_baseline_payment_24" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:text="Pay"
                        android:textColor="#339E38"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="NYUMBA KUMI"
        android:textColor="#FAF6F6"
        android:textSize="39sp" />



</RelativeLayout>